{
  "manifest_version": 3,
  "name": "Time Tracker",
  "version": "3.0",
  "permissions": ["tabs", "windows", "alarms", "storage", "background"],
  "host_permissions": ["http://localhost:8080/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Time Tracker - Click to view status"
  },
  "minimum_chrome_version": "102",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
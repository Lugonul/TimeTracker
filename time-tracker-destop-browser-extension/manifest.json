{
  "manifest_version": 3,
  "name": "Time Tracker",
  "version": "1.0",
  "description": "Automatically track time spent on websites",
  "permissions": ["tabs"],
  "host_permissions": ["http://localhost:8080/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Time Tracker - Click to view status"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}